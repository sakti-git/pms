<% include ../../partials/header %>

<div class="d-flex" id="wrapper">
    <form action="" id="form-filter" method="POST"
        style="padding-top: 20px; padding-bottom: 10px; padding-right: 200px; padding-left: 200px; width: 100%;">
        <div class="card">
            <div class="card-header" style="background-color: wheat;">
                <h2>Edit Members</h2>
            </div>

            <div class="card-body" style="background-color: burlywood;">
                <div class="row">
                    <div class="col" style="padding-left: 100px;">
                        <div class="form-check">
                            <label class="form-check-label" for="editMemberName">
                                Member
                            </label>
                        </div>
                    </div>
                    <div class="col-9" style="padding-right: 170px;">
                        <div class="form-group">
                            <input type="text" name="editMemberName" class="form-control" id="editMemberName"
                                placeholder="" value="<%= member.fullname %>" readonly>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col" style="padding-left: 100px;">
                        <div class="form-check">
                            <label class="form-check-label" for="editMemberPosition">
                                Position
                            </label>
                        </div>
                    </div>

                    <div class="col-9">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="editPosition" id="manager"
                                value="Manager" <%= member.role == 'Manager' ? 'checked' : '' %>>
                            <label class="form-check-label" for="manager">
                                Manager
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="editPosition" id="softDev"
                                value="Software Developer" <%= member.role == 'Software Developer' ? 'checked' : '' %>>
                            <label class="form-check-label" for="softDev">
                                Software Developer
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="editPosition" id="qa"
                                value="Quality Assurance" <%= member.role == 'Quality Assurance' ? 'checked' : '' %>>
                            <label class="form-check-label" for="qa">
                                Quality Assurance
                            </label>
                        </div>
                    </div>

                </div>

                <div class="col" style="padding-left: 100px; padding-top: 10px;">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        </div>
    </form>
</div>

<% include ../../partials/footer %>