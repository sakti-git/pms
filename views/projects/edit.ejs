<% include ../partials/header %>

<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= link == 'projects' ? 'active' : '' %>">
            <a class="nav-link" href="/projects">Projects <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item <%= link == 'profile' ? 'active' : '' %>">
            <a class="nav-link" href="/profile">Profile <span class="sr-only">(current)</span></a>
        </li>
    </ul>
    <a href="/logout"><button class="btn btn-outline-success tombol sign-out my-2 my-sm-0">Sign Out</button></a>
</div>
</nav>

<form action="" id="form-filter" method="POST" style="padding-inline: 50px;">
    <div class="card">
        <div class="card-header">
            <h2>Edit Projects</h2>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col" style="padding-left: 100px;">
                    <div class="form-check">
                        <label class="form-check-label" for="editProjectName">
                            Name
                        </label>
                    </div>
                </div>
                <div class="col-10" style="padding-right: 200px;">
                    <div class="form-group">
                        <input type="text" name="editProjectName" class="form-control" id="editProjectName"
                            placeholder="" value="<%= projectName.name%>">
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col" style="padding-left: 100px;">
                    <div class="form-check">
                        <label class="form-check-label" for="editProjectMember">
                            Members
                        </label>
                    </div>
                </div>

                <div class="col-10">
                    <% members.forEach ((item,index) => { %>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="editMembers"
                            id="editMembers<%= index + 1%>" value="<%= item.userid %>"
                            <%= dataMember.includes(item.userid) ? 'checked' : '' %>>
                        <label class="form-check-label" for="members<%= index + 1%>">
                            <%= item.fullname %>
                        </label>
                    </div>
                    <% }) %>
                </div>

            </div>

            <div class="col" style="padding-left: 100px; padding-top: 10px;">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/projects" <button class="btn btn-warning">Back</button> </a>
            </div>

        </div>

    </div>
    </div>
</form>

<% include ../partials/footer %>